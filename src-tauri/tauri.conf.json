{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "dirtywave-updater",
	"version": "0.1.1",
	"identifier": "com.dirtywave.updater",
	"build": {
		"beforeDevCommand": "quasar-cli dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "quasar-cli build",
		"frontendDist": "../src-quasar/dist/spa"
	},
	"app": {
		"windows": [
			{
				"decorations": false,
				"dragDropEnabled": false,
				"hiddenTitle": true,
				"title": "Dirtywave Updater"
			}
		],
		"security": {
			"capabilities": [
				{
					"identifier": "draggable-window",
					"windows": ["*"],
					"permissions": [
						"core:window:default",
						"core:window:allow-close",
						"core:window:allow-start-dragging"
					]
				}
			],
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
