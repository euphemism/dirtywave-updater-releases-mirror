{
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},

	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},

	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},

	"[rust]": {
		"editor.defaultFormatter": "rust-lang.rust-analyzer"
	},

	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},

	"[vue]": {
		"editor.defaultFormatter": "Vue.volar"
	},

	"editor.formatOnSave": true,

	"nix.enableLanguageServer": true,
	"nix.serverPath": "nixd",
	"nix.serverSettings": {
		"nixd": {
			"formatting": {
				"command": ["nixfmt"]
			}
		}
	}
}
